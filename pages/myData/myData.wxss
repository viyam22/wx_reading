/**index.wxss**/
page {
    background-color: #f4f5f7;
}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;

}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 1rem;
    border-bottom: 2rpx solid #edeef0;
    background: #fff;
}
.userinfo-avatar {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    position: relative;
}
.userinfo-set {
    position: absolute;
    right: 1rem;
    top:3rem;
    transform: translateY(-50%);
    width: 1rem;
    height: 1rem;
}
.userinfo-nickname {
    color: #333;
    font-size: 14px;
    line-height: 2rem;
}
.usermotto {
    margin-top: 200px;
}
.userstatic {
    margin-top: 1rem;
    border-top: 2rpx solid #edeef0;
    border-bottom: 2rpx solid #edeef0;
    background: #fff;
    width: 100%;
}
.userstatic-item {
    margin-left: 1rem;
    border-bottom: 2rpx solid #edeef0;
    font-size: 14px;
    line-height: 3rem;
}
.userstatic-item:last-child {
    border-bottom: none;
}
.userstatic-item-icon {
    width: 1.1rem;
    height: 1.1rem;
    border-radius: 50%;
    margin: 0.9rem 0.6rem 0 0;
    display: block;
    float: left;
}