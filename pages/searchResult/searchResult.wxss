page {
  background-color: #f4f5f7;
}
.search-box {
  padding: 0.4rem;
  height: 1.5rem;
}
.search {
  background: #fff;
  border-radius: 0.4rem;
  font-size: 12px;
  height: 1.5rem;
  text-align:center;
  width: 83%;
  float: left;
}
.search-btn {
  width: 15%;
  float: right;
  background: #1689EF;
  border-radius: 0.4rem;
  font-size: 12px;
  color: #FFF;
  height: 1.5rem;
  line-height: 1.5rem;
  text-align:center;
}
.book-box {
  background: #fff;
  padding: 0.6rem;
  overflow: hidden;
  border-bottom: 1px solid #F2F2F2;
}
.book-img {
  width: 4rem;
  height: 5rem;
  float: left;
}
.book-introduce {
  margin-left: 4.4rem;
  color: #8B8B8B;
  font-size: 12px;
  line-height: 1.2rem;
}
.book-name {
  font-size: 14px;
  color: #000;
  font-weight: bold;
}
